{% if posts.pagination.pages is not empty %}
    <div class=" container">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="...">
                    <ul class="pagination pagination-lg justify-content-center">
                        
            
                        {% for page in pagination.pages %}
                            {% if page.link %}
                                <li class="page-item">
                                    <a href="{{ page.link }}" class="{{ page.class }} page-link">
                                        {{ page.title }}
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item active" aria-current="page">
                                    <span class="{{ page.class }} page-link">{{ page.title }}</span>
                                </li>
                            {% endif %}
                        {% endfor %}


                    </ul>
                </nav>
            </div>
        </div>
    </div>
    
{% endif %}