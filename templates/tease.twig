<div class="single-card">
	
	<div class="card">
		<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
		  <img src="{{post.thumbnail.src}}" class="card-img-top" alt="...">
		  <div class="card-body">
		  	<a href="{{post.link}}">
			    <h5 class="card-title">{{post.title}}</h5>
			    <p class="card-text">{{post.preview.length(10).read_more('').force}}</p>
		    </a>
		    
		    <div class="row card-meta">
		    	<div class="col-lg-6">
		    		<i class="fas fa-user"> {{ post.author }} </i>
		    	</div>
		    	<div class="col-lg-6">
		    		<i class="far fa-clock"> {{ post.post_date|date('F j, Y') }} </i>
		    	</div>
		    	
		    	<div class="col-lg-12">
		    		<i class="fas fa-tags"></i>
		    		{% for tag in post.terms('tags') %}
						    <a href="{{tag.link}}">{{tag.name}}</a>
						{% endfor %}
		    	</div>
		    </div>
		    
		    
		    
		  </div>
	  </article>
	</div>

</div>
